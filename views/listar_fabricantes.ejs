<!-- views/index.ejs -->
<!DOCTYPE html>
<html>

<head>
  <meta charset="UTF-8">
  <title>Fabricantes</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">

</head>

<body>
  <h1>Productos por Fabricante</h1>
  <table>
    <tr>
      <th>ID</th>
      <th>Categoria</th>
      <th>Fabricante</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Stock</th>
      <% productos.forEach(producto=> { %>
        <tr>
          <td>
            <%= producto.id %>
          </td>
          <td>
            <%= producto.categoria %>
          </td>
          <td>
            <%= producto.fabricante %>
          </td>
          <td>
            <%= producto.nombre %>
          </td>
          <td>
            <%= producto.precio %>
          </td>
          <td>
            <%= producto.stock %>
          </td>
        </tr>
        <% }) %>
  </table>
</body>

</html>