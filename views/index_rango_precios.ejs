<!-- views/index.ejs -->
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <title>Rango Precios</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">

</head>

<body>
    <h1>Rango Precios</h1>
    <form action="/index_rango_precios" method="post">
        <label for="min">Min:</label>
        <input type="text" id="min" name="min" required>
        <br>
        <label for="max">Max:</label>
        <input type="text" id="max" name="max" required>
        <br>
        <input type="submit" value="Filtrar">
    </form>
    <table>
        <tr>
            <th>ID</th>
            <th>Categoria</th>
            <th>Fabricante</th>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Stock</th>
        </tr>
        <% productos.forEach(producto=> { %>
            <tr>
                <td>
                    <%= producto.id %>
                </td>
                <td>
                    <%= producto.categoria %>
                </td>
                <td>
                    <%= producto.fabricante %>
                </td>
                <td>
                    <%= producto.nombre %>
                </td>
                <td>
                    <%= producto.precio %>
                </td>
                <td>
                    <%= producto.stock %>
                </td>
            </tr>
            <% }) %>
    </table>
</body>

</html>