<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Fabricantes</title>
  <link rel="stylesheet" type="text/css" href="/styles.css">

</head>
<body>
  <h1>Fabricantes</h1>
  <table>
    <tr>
      <th>ID</th>
      <th>Nombre</th>
    </tr>
    <% fabricantes.forEach(fabricante => { %>
      <tr>
        <td><%= fabricante.id %></td>
        <td><%= fabricante.nombre %></td>
        <td>
          <a href="/editar_fabricantes/<%= fabricante.id %>">Editar</a>
          <a href="/eliminar_fabricantes/<%= fabricante.id %>">Eliminar</a>
          <a href="/listar_fabricantes/<%= fabricante.id %>">Listar</a>
        </td>
      </tr>
    <% }) %>
  </table>
  <a href="/agregar_fabricantes">Agregar fabricante</a>
</body>
</html>
